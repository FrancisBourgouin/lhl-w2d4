<% include ./partials/_head %>
  <div class="container">

    <h1>Edit Comment</h1>

    <form method="post" action="/comments/<%= content.id %>?_method=PUT">
    <div class="form-group">
      <div style="width: 20em;">
        <input
          style="width: 100%"
          type="text"
          name="comment"
          id="comment"
          value="<%= content.comment %>">
      </div>

        <input type="submit" class="btn btn-primary" value="Update" />
      </div>
    </form>
  </div>
  </body>
</html>
